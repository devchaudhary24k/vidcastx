# ==============================================================================
# INFRASTRUCTURE (Used by Docker Compose)
# ==============================================================================

# PostgreSQL
DB_USER=admin
DB_PASSWORD=password
DB_NAME=vidcastx

# MinIO (Local S3)
MINIO_USER=admin
MINIO_PASSWORD=password

# ==============================================================================
# SHARED APPLICATION CONFIG (Used by API, Workers, Web)
# ==============================================================================

# Database Connection (Drizzle)
# Note: In local dev, host is 'localhost'. Inside Docker containers, it would be 'postgres'
DATABASE_URL="postgresql://admin:password@localhost:5432/vidcastx"

# Redis Connection (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Object Storage (S3 Compatible - AWS / Hetzner / MinIO)
# For local MinIO, use: http://localhost:9000
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1" # MinIO default
S3_ACCESS_KEY_ID="admin"
S3_SECRET_ACCESS_KEY="password"
S3_BUCKET_NAME="vidcastx-bucket"
S3_FORCE_PATH_STYLE="true" # Required for MinIO. for AWS/Hetzner set to false

# ==============================================================================
# API SERVER (apps/api-server)
# ==============================================================================

PORT=3001
API_SECRET="super_secret_random_string_for_signing_tokens"
AYYO="supersecret"

# ==============================================================================
# WORKER TRANSCODE (apps/worker-transcode)
# ==============================================================================

# How many concurrent videos to encode?
CONCURRENT_JOBS=2

# ==============================================================================
# FRONTEND (apps/web)
# ==============================================================================

# The URL of your Hono API
NEXT_PUBLIC_API_URL="http://localhost:3001"

# The Public URL where images/videos are served from
# Locally: http://localhost:9000/vidcastx-bucket
# Production: https://cdn.vidcastx.com
NEXT_PUBLIC_CDN_URL="http://localhost:9000/vidcastx-bucket"

# ==============================================================================
# USER AUTHENTICATION
# ==============================================================================

# Basic Auth env
BETTER_AUTH_SECRET=supersecret
BETTER_AUTH_URL=http://localhost:3000

# Github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Discord
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=



